{
  "compilerOptions": {
    "target": "es2020",                                  
    "lib": ["es2020"],                                       
    "module": "ESNext",                                
    "moduleResolution": "node",                    
    "rootDirs": ["src"],                              
    "typeRoots": [
      ".src/types",
      "./node_modules/@types"
    ],                                 
    "types": ["node"],                                
    "resolveJsonModule": true,                      
    "outDir": "./dist",                                  
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true                                
  },
}
